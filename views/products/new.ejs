<%- layout('./layouts/boilerplate') %>

<div class="row mb-3 justify-content-center" >
    <div class="col-md-6">
        <h3 class="text-center h3">Sell Product</h3>
        <form action="/products" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" name="product[name]" placeholder="name" id="name" required autofocus>
            </div>
            <div class="mb-3">
                <label class="form-label" for="category">Category</label>
                <select class="form-select" name="product[category]" required>
                    <% for(let category of categories){ %>
                        <option value="<%= category %>"><%= category %></option>
                    <% } %>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" name="product[description]" id="description" cols="30" rows="3" placeholder="description" required></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image url</label>
                <input class="form-control" type="text" name="product[image]" placeholder="url" id="image">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">&#8377;</span>
                    </div>
                    <input type="number" class="form-control" id="price" placeholder="0" name="product[price]" min="0" required>
                </div>
            </div>
            <button class="btn btn-success">Add Product</button>
        </form>
    </div>
</div>

<script src="/validateForms.js"></script>